<!-- kenya_school_bus_app/views/ksba_school_views.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="ksba_school_form_view" model="ir.ui.view">
            <field name="name">ksba.school.form</field>
            <field name="model">ksba.school</field>
            <field name="arch" type="xml">
                <form string="School">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="address"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="website"/>
                        </group>
                        <notebook>
                            <page string="Students">
                                <field name="students">
                                    <tree>
                                        <field name="firstname"/>
                                        <field name="lastname"/>
                                        <field name="home_location"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Buses">
                                <field name="buses_id">
                                    <tree>
                                        <field name="license_plate"/>
                                        <field name="capacity"/>
                                        <field name="driver_id"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Attendance">
                                <field name="attendance_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="attendance_date"/>
                                        <field name="bus_id"/>
                                        <field name="stop_id"/>
                                        <field name="child_id"/>
                                        <field name="state"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Drivers">
                                <field name="driver_ids">
                                    <tree>
                                        <field name="firstname"/>
                                        <field name="lastname"/>
                                        <field name="phone"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Administrators">
                                <field name="administrator_ids">
                                    <tree>
                                        <field name="firstname"/>
                                        <field name="lastname"/>
                                        <field name="phone"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="ksba_school_tree_view" model="ir.ui.view">
            <field name="name">ksba.school.tree</field>
            <field name="model">ksba.school</field>
            <field name="arch" type="xml">
                <tree string="Schools">
                    <field name="name"/>
                    <field name="address"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="ksba_school_action">
            <field name="name">Schools</field>
            <field name="res_model">ksba.school</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="ksba_school_search_view"/>
        </record>

        <!-- Menuitem -->
        <menuitem id="ksba_school_menuitem" name="Schools" parent="ksba_menu" sequence="20"/>
        <menuitem id="ksba_school_menuitem_form" name="Manage Schools" parent="ksba_school_menuitem" action="ksba_school_action" sequence="10"/>
    </data>
</odoo>
