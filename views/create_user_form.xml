<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_create_user_form" model="ir.ui.view">
        <field name="name">create.user.form</field>
        <field name="model">ksba.partners</field>
        <field name="arch" type="xml">
            <form string="Create User">
                <group>
                    <field name="name" placeholder="Name" required="True"/>
                    <field name="role" placeholder="Role" required="True" 
                           widget="selection" options="{'no_open': True}">
                        <options>
                            <option value="parent">Parent</option>
                            <option value="driver">Driver</option>
                            <option value="administrator">Administrator</option>
                        </options>
                    </field>
                    <field name="email" placeholder="Email" required="True"/>
                    <field name="phone" placeholder="Phone" required="True"/>
                    <field name="school_id" placeholder="School ID" required="True"/>
                </group>
                <footer>
    <button string="Create User" type="object" name="create_user_action" class="btn-primary"/>
    <button string="Cancel" type="object" name="action_cancel" class="btn-secondary" special="cancel"/>
</footer>

            </form>
        </field>
    </record>
</odoo>
