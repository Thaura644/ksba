<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="ksba_child_form_view" model="ir.ui.view">
            <field name="name">ksba.child.form</field>
            <field name="model">ksba.child</field>
            <field name="arch" type="xml">
                <form string="Child">
                    <sheet>
                        <group>
                            <field name="firstname"/>
                            <field name="lastname"/>
                            <field name="home_location"/>
                            <field name="parent_id"/>
                            <field name="school_id"/>
                            <field name="bus_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="ksba_child_tree_view" model="ir.ui.view">
            <field name="name">ksba.child.tree</field>
            <field name="model">ksba.child</field>
            <field name="arch" type="xml">
                <tree string="Children">
                    <field name="firstname"/>
                    <field name="lastname"/>
                    <field name="home_location"/>
                </tree>
            </field>
        </record>

        <!-- Search View (added this) -->
        <record id="ksba_child_search_view" model="ir.ui.view">
            <field name="name">ksba.child.search</field>
            <field name="model">ksba.child</field>
            <field name="arch" type="xml">
                <search>
                    <field name="firstname"/>
                    <field name="lastname"/>
                    <field name="home_location"/>
                    <field name="parent_id"/> <!-- Add any additional searchable fields -->
                    <field name="school_id"/>
                    <field name="bus_id"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="ksba_child_action">
            <field name="name">Children</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ksba.child</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="ksba_child_search_view"/>
        </record>

        <!-- Menuitem -->
        <menuitem id="ksba_child_menuitem" name="Children" parent="ksba_menu" sequence="100"/>
        <menuitem id="ksba_child_menuitem_form" name="Manage Children" parent="ksba_child_menuitem" action="ksba_child_action" sequence="10"/>
    </data>
</odoo>
