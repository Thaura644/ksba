<!-- kenya_school_bus_app/views/ksba_bus_views.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="ksba_bus_form_view" model="ir.ui.view">
            <field name="name">ksba.bus.form</field>
            <field name="model">ksba.bus</field>
            <field name="arch" type="xml">
                <form string="Bus">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="license_plate"/>
                            <field name="capacity"/>
                            <field name="school_id"/>
                            <field name="driver_id"/>
                            <field name="route_ids"/>
                        </group>
                        <notebook>
                            <page string="Bus Locations">
                                <field name="bus_locations">
                                    <tree>
                                        <field name="latitude"/>
                                        <field name="longitude"/>
                                        <field name="timestamp"/>
                                        <field name="map_url"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Assigned Children">
                                <field name="child_ids">
                                    <tree>
                                        <field name="firstname"/>
                                        <field name="lastname"/>
                                        <field name="seat_number"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Stops">
                                <field name="stop_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="sequence"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="ksba_bus_tree_view" model="ir.ui.view">
            <field name="name">ksba.bus.tree</field>
            <field name="model">ksba.bus</field>
            <field name="arch" type="xml">
                <tree string="Buses">
                    <field name="name"/>
                    <field name="license_plate"/>
                    <field name="capacity"/>
                    <field name="school_id"/>
                    <field name="driver_id"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="ksba_bus_action">
            <field name="name">Buses</field>
            <field name="res_model">ksba.bus</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="ksba_bus_search_view"/>
        </record>

        <!-- Menuitem -->
        <menuitem id="ksba_bus_menuitem" name="Buses" parent="ksba_menu" sequence="30"/>
        <menuitem id="ksba_bus_menuitem_form" name="Manage Buses" parent="ksba_bus_menuitem" action="ksba_bus_action" sequence="10"/>
    </data>
</odoo>
