<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="ksba_bus_form_view" model="ir.ui.view">
            <field name="name">ksba.bus.form</field>
            <field name="model">ksba.bus</field>
            <field name="arch" type="xml">
                <form string="Bus">
                    <sheet>
                        <group>
                            <field name="license_plate"/>
                            <field name="capacity"/>
                            <field name="driver_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="ksba_bus_tree_view" model="ir.ui.view">
            <field name="name">ksba.bus.tree</field>
            <field name="model">ksba.bus</field>
            <field name="arch" type="xml">
                <tree string="Buses">
                    <field name="license_plate"/>
                    <field name="capacity"/>
                    <field name="driver_id"/>
                </tree>
            </field>
        </record>

        <!-- Search View (added this) -->
        <record id="ksba_bus_search_view" model="ir.ui.view">
            <field name="name">ksba.bus.search</field>
            <field name="model">ksba.bus</field>
            <field name="arch" type="xml">
                <search>
                    <field name="license_plate"/>
                    <field name="capacity"/>
                    <field name="driver_id"/> <!-- Add any additional searchable fields -->
                </search>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="ksba_bus_action">
            <field name="name">Buses</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ksba.bus</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="ksba_bus_search_view"/>
        </record>

        <!-- Menuitem -->
        <menuitem id="ksba_bus_menuitem" name="Buses" parent="ksba_menu" sequence="90"/>
        <menuitem id="ksba_bus_menuitem_form" name="Manage Buses" parent="ksba_bus_menuitem" action="ksba_bus_action" sequence="10"/>
    </data>
</odoo>
