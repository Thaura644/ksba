<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="ksba_driver_form_view" model="ir.ui.view">
            <field name="name">ksba.driver.form</field>
            <field name="model">ksba.driver</field>
            <field name="arch" type="xml">
                <form string="Driver">
                    <sheet>
                        <group>
                            <field name="firstname"/>
                            <field name="lastname"/>
                            <field name="phone"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="ksba_driver_tree_view" model="ir.ui.view">
            <field name="name">ksba.driver.tree</field>
            <field name="model">ksba.driver</field>
            <field name="arch" type="xml">
                <tree string="Drivers">
                    <field name="firstname"/>
                    <field name="lastname"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <!-- Search View (added this) -->
        <record id="ksba_driver_search_view" model="ir.ui.view">
            <field name="name">ksba.driver.search</field>
            <field name="model">ksba.driver</field>
            <field name="arch" type="xml">
                <search>
                    <field name="firstname"/>
                    <field name="lastname"/>
                    <field name="phone"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="ksba_driver_action">
            <field name="name">Drivers</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ksba.driver</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="ksba_driver_search_view"/>
        </record>

        <!-- Menuitem -->
        <menuitem id="ksba_driver_menuitem" name="Drivers" parent="ksba_menu" sequence="110"/>
        <menuitem id="ksba_driver_menuitem_form" name="Manage Drivers" parent="ksba_driver_menuitem" action="ksba_driver_action" sequence="10"/>
    </data>
</odoo>
