<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="ksba_partners_form_view" model="ir.ui.view">
            <field name="name">ksba.partners.form</field>
            <field name="model">ksba.partners</field>
            <field name="arch" type="xml">
                <form string="Partner">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="email"/>
                            <field name="phone"/>
                            <field name="type"/> <!-- Assuming a type field exists -->
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="ksba_partners_tree_view" model="ir.ui.view">
            <field name="name">ksba.partners.tree</field>
            <field name="model">ksba.partners</field>
            <field name="arch" type="xml">
                <tree string="Partners">
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </tree>
            </field>
        </record>

        <!-- Search View (added this) -->
        <record id="ksba_partners_search_view" model="ir.ui.view">
            <field name="name">ksba.partners.search</field>
            <field name="model">ksba.partners</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name"/>
                    <field name="email"/>
                    <field name="phone"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="ksba_partners_action">
            <field name="name">Partners</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">ksba.partners</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="ksba_partners_search_view"/>
        </record>

        <!-- Menuitem -->
        <menuitem id="ksba_partners_menuitem" name="Partners" parent="ksba_menu" sequence="120"/>
        <menuitem id="ksba_partners_menuitem_form" name="Manage Partners" parent="ksba_partners_menuitem" action="ksba_partners_action" sequence="10"/>
    </data>
</odoo>
