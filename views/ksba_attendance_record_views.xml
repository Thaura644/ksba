<!-- kenya_school_bus_app/views/ksba_attendance_record_views.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="ksba_attendance_record_form_view" model="ir.ui.view">
            <field name="name">ksba.attendance.form</field>
            <field name="model">ksba.attendance</field>
            <field name="arch" type="xml">
                <form string="Attendance Record">
                    <sheet>
                        <group>
                            <field name="name" readonly="1"/>
                            <field name="attendance_date"/>
                            <field name="bus_id"/>
                            <field name="stop_id"/>
                            <field name="child_id"/>
                            <field name="seat_number"/>
                            <field name="state"/>
                        </group>
                        <notebook>
                            <page string="Details">
                                <group>
                                    <field name="date"/>
                                    <field name="school_id"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="ksba_attendance_record_tree_view" model="ir.ui.view">
            <field name="name">ksba.attendance.tree</field>
            <field name="model">ksba.attendance</field>
            <field name="arch" type="xml">
                <tree string="Attendance Records">
                    <field name="name"/>
                    <field name="attendance_date"/>
                    <field name="bus_id"/>
                    <field name="stop_id"/>
                    <field name="child_id"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="ksba_attendance_record_action">
            <field name="name">Attendance Records</field>
            <field name="res_model">ksba.attendance</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="ksba_attendance_record_search_view"/>
        </record>

        <!-- Menuitem -->
        <menuitem id="ksba_attendance_menuitem" name="Attendance" parent="ksba_menu" sequence="100"/>
        <menuitem id="ksba_attendance_menuitem_form" name="Manage Attendance" parent="ksba_attendance_menuitem" action="ksba_attendance_record_action" sequence="10"/>
    </data>
</odoo>
