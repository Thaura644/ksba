<!-- kenya_school_bus_app/views/data.xml -->
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequences -->
        <record id="seq_attendance" model="ir.sequence">
            <field name="name">Attendance Sequence</field>
            <field name="code">ksba.attendance</field>
            <field name="prefix">ATT</field>
            <field name="padding">5</field>
            <field name="company_id" eval="False"/>
        </record>

        <!-- Cron Jobs -->
        <record id="ir_cron_update_latitude" model="ir.cron">
            <field name="name">Update Latitude of Stops</field>
            <field name="model_id" ref="model_ksba_stop"/>
            <field name="state">code</field>
            <field name="code">model._update_latitude()</field>
            <field name="interval_number">5</field>
            <field name="interval_type">minutes</field>
            <field name="numbercall">-1</field>
            <field name="doall" eval="False"/>
            <field name="active" eval="True"/>
        </record>
    </data>
</odoo>
