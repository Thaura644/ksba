<!-- kenya_school_bus_app/views/ksba_route_views.xml -->
<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="ksba_route_tree_view" model="ir.ui.view">
            <field name="name">ksba.route.tree</field>
            <field name="model">ksba.route</field>
            <field name="arch" type="xml">
                <tree string="Routes">
                    <field name="name"/>
                    <field name="description"/>
                    <field name="start_location"/>
                    <field name="end_location"/>
                    <field name="distance"/>
                    <field name="duration"/>
                </tree>
            </field>
        </record>

        <!-- Form View -->
        <record id="ksba_route_form_view" model="ir.ui.view">
            <field name="name">ksba.route.form</field>
            <field name="model">ksba.route</field>
            <field name="arch" type="xml">
                <form string="Route">
                    <sheet>
                        <group>
                            <field name="name"/>
                            <field name="description"/>
                            <field name="start_location"/>
                            <field name="end_location"/>
                            <field name="distance"/>
                            <field name="duration"/>
                        </group>
                        <notebook>
                            <page string="Stops">
                                <field name="stop_ids" widget="many2many_tags">
                                    <tree>
                                        <field name="name"/>
                                        <field name="sequence"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Buses">
                                <field name="bus_ids" widget="many2many_tags">
                                    <tree>
                                        <field name="name"/>
                                        <field name="license_plate"/>
                                    </tree>
                                </field>
                            </page>
                            <page string="Map">
                                <img t-if="record.map_url" t-att-src="record.map_url" style="width:100%; height:auto;"/>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action -->
        <record model="ir.actions.act_window" id="ksba_route_action">
            <field name="name">Routes</field>
            <field name="res_model">ksba.route</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="ksba_route_search_view"/>
        </record>

        <!-- Menuitem -->
        <menuitem id="ksba_route_menuitem" name="Routes" parent="ksba_menu" sequence="40"/>
        <menuitem id="ksba_route_menuitem_form" name="Manage Routes" parent="ksba_route_menuitem" action="ksba_route_action" sequence="10"/>
    </data>
</odoo>
